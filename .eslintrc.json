{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "ignorePatterns": "dist/**/*.js",
    "rules": {
        "@typescript-eslint/typedef": [
            "warn",
            {
                "arrowParameter": true,
                "variableDeclaration": true
            }
        ],
        "@typescript-eslint/no-explicit-any": "off"
    }
}